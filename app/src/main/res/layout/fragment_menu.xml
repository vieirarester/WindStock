<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#026cb6"
    android:gravity="top|center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:text="Sair"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageFotoUsuario"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <Button
        android:id="@+id/btnTransacao"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botao_quadrado"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:text="Transação"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/btnHistorico"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botao_quadrado"
        android:drawableLeft="@android:drawable/ic_menu_recent_history"
        android:text="Histórico"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:backgroundTint="#FFFFFF" />

    <!--<Button
        android:id="@+id/btnPedidoCompra"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botao_quadrado"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:text="Solicitação"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:backgroundTint="#FFFFFF" />-->

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botao_quadrado"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:text="Buscar"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/btnRelatorio"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botao_quadrado"
        android:drawableLeft="@android:drawable/sym_contact_card"
        android:text="Relatório"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:backgroundTint="#FFFFFF" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="127dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/inventario_image"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>

        <TableLayout
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:background="@drawable/borda"
            android:gravity="end"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:id="@+id/txtTabelaEntrada"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TOTAL ENTRADAS"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtValorEntrada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="17dp"
                    android:textColor="@color/corEntrada"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/txtTabelaSaida"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TOTAL SAÍDAS"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtValorSaida"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="17dp"
                    android:textColor="@color/corSaida"
                    android:textStyle="bold" />
            </TableRow>



        </TableLayout>
    </LinearLayout>

</LinearLayout>
